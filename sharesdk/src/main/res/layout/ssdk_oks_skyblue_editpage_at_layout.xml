<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/atTextView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ssdk_oks_btn_back_nor"
        android:gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:textColor="#333333"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/atDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:layout_below="@id/textEditText"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/atTextView"
        android:text="@string/ssdk_oks_list_friends"
        android:textColor="#333333"
        android:textSize="14sp"/>
</RelativeLayout>